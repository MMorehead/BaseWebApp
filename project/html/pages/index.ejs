<html lang="en">
<head>
    <% include ../helpers/head %>
</head>

<body>

  <br><br>
  <button class="btn btn-default" type="button" onclick="toggleSignIn()" id="login">
    Log In
  </button>


  <!-- the classes 'page-header' and 'btn btn-default' create bootstrap components.  -->
  <!-- Check out more components here: http://getbootstrap.com/components/ -->
  <div class="page-header">
    <h1>Write a message below!</h1>
  </div>

  <form action="/action_page.php">
    <p>Title:</p>
    <input type="text" name="Title" id="title">
    <br><br>
    <p>Message:</p>
    <input type="text" name="Message" id="message">
    <br><br>
  </form>


  <button class="btn btn-default" type="button" onclick="handleMessageFormSubmit()" id='submit'>
    Submit
  </button>

  <br></br>

  <div id="doge-image"/>

  <div id="stream">
 

  

</body>
<script>
 window.onload = function() {
    const databaseStreamReference = firebase.database().ref('/stream/');
  
    databaseStreamReference.on('value', function(snapshot) {
      var messages = snapshot.val();
      $('#stream').empty();
  
      if (messages) {
        Object.keys(messages).forEach(function (key) {
          const message = messages[key];
          $('#stream').append(`<div><b>${message.title}</b><br>${message.body}<br><br></div>`);
        });
      }
    });
  };
</script>
</html>
